	<element name="Kinith Spear, finesse" type="Weapon" source="Kinith" id="ID_KINITH_WEAPON_SPEAR_FINESSE">
		<supports>ID_INTERNAL_WEAPON_CATEGORY_SIMPLE_MELEE, ID_INTERNAL_DAMAGE_TYPE_PIERCING, ID_INTERNAL_WEAPON_PROPERTY_FINESSE, ID_INTERNAL_WEAPON_PROPERTY_VERSATILE, ID_INTERNAL_WEAPON_GROUP_SPEARS</supports>
		<description>
			<p>
				A simple spear that trades the ability to hit a target in a distance for a more dexterity based close quarter weapon.
			</p>
		</description>
		<setters>
			<set name="category">Weapons</set>
			<set name="cost" currency="gp">1</set>
			<set name="weight" lb="3">3 lb.</set>
			<set name="slot">onehand</set>
			<set name="damage" type="piercing">1d6</set>
			<set name="versatile">1d8</set>
			<set name="proficiency">ID_PROFICIENCY_WEAPON_PROFICIENCY_SPEAR</set>
		</setters>
	</element>

