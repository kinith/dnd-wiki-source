<?xml version="1.0" encoding="utf-8" ?>
<elements>
    <info>
        <name>Custom</name>
        <description>When no other background combination works</description>
        <author>-</author>
        <update version="0.0.1">
            <file name="custom.xml" url="https://raw.githubusercontent.com/kinith/kinith-aurora-source/master/kinith/backgrounds/custom.xml" />
        </update>
    </info>
    <element name="Custom" type="Background" source="" id="ID_KINITH_BACKGROUND_CUSTOM">
        <description>
            <p>When no other background combination works</p>
            <p>
                <span class="emphasis">Skill Proficiencies:</span>You can choose any two proficiencies<br/>
                <span class="emphasis">Tool Proficiencies:</span>You can choose any one proficiency or forgo it for another language<br/>
                <span class="emphasis">Languages:</span>You can choose one languages<br/>
                <span class="emphasis">Equipment:</span>A pouch of 40 gp
            </p>
            <div element="ID_KINITH_BACKGROUND_CUSTOM_CUSTOM" />
        </description>
        <setters>
            <set name="sourceUrl">https://www.dandwiki.com/wiki/Witch_Hunter_(5e_Background)</set>
        </setters>
        <rules>
            <select type="Proficiency" name="Skill Proficiency (Custom)" supports="Skill" number="2"/>
            <select type="Proficiency" name="Tool Proficiency, (Custom)" supports="Tool" />
            <select type="Language" name="Language (Custom)" number="1" />
            <grant type="Background Feature" id="ID_KINITH_BACKGROUND_CUSTOM_CUSTOM" />
        </rules>
    </element>
    <element name="Feature: Custom" type="Background Feature" source="" id="ID_KINITH_BACKGROUND_CUSTOM_CUSTOM">
		<supports>Background Feature</supports>
        <description>
            <p>
                Work with your GM, you may be a craftsman, gambler, or translator. People of your craft may or may not
                know you and help you out in times of need.
            </p>
        </description>
		<sheet alt="Custom" />
    </element>
</elements>